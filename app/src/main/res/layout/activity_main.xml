<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:background="#FFFFFF"
    tools:context=".views.user.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/purple_700"
        android:id="@+id/appBarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/appBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Products"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:id="@+id/m_progressBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressTint="@color/orange"
        android:progressBackgroundTint="@color/orange"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/appBarId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_ProductRecyclerViewId"
        />



</RelativeLayout>
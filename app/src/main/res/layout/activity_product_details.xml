<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.user.ProductDetailsActivity">


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/p_d_progressBarId"
        />

    <ScrollView
        android:layout_above="@+id/ln1"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/p_d_mainLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/p_d_sliderRecyclerViewId"
                android:layout_width="match_parent"
                android:layout_height="250dp" />



            <LinearLayout
                android:padding="7dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Product Color"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginRight="25dp"

                    />

                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_d_productColorSpinner"
                    />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Product Size"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginRight="25dp"

                    />

                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_d_productSizeSpinner"
                    />
            </LinearLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p_d_productPriceTvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/aclonica"
                    android:padding="10dp"
                    android:text="239"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <include
                    android:layout_centerVertical="true"
                    android:id="@+id/main_CartItemLayout"
                    layout="@layout/cart_item_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/p_d_productTitleTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="10dp"
                android:text="239"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p_d_productDescriptionTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="10dp"
                android:text="239"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_i_productPriceTv"
                android:orientation="horizontal"
                android:padding="10dp">

                <RatingBar
                    android:id="@+id/p_d_ratingBarId"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:rating="3.5" />

                <TextView
                    android:id="@+id/p_d_ratingTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="(3)" />
            </LinearLayout>




            <TextView
                android:id="@+id/p_d_submitRatingTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="10dp"
                android:text="Submit Your Review"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <androidx.cardview.widget.CardView
                android:layout_marginBottom="25dp"
                android:visibility="gone"
                android:id="@+id/p_d_submitRatingCard"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/submitReviewContainerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/p_d_ratingCommentEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:fontFamily="@font/aclonica"
                            android:hint="Enter Your Experience For This Product."
                            android:padding="10dp"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <RatingBar
                        android:id="@+id/p_d_submitRatingBarId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:progressBackgroundTint="@color/black"
                        android:progressTint="@color/orange"
                        android:rating="3"
                        android:stepSize="0.5" />
                    <Button
                        android:layout_marginBottom="10dp"
                        android:id="@+id/p_d_submitRatingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_bg"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Submit Rating"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/p_d_getReviewProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:progressBackgroundTint="@color/orange"
                android:progressTint="@color/orange"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p_d_ratingRecyclerViewId"
                />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ln1"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/quantity_counter_layout"
            android:id="@+id/c_i_quantityItemLayout"/>
        <TextView
            android:id="@+id/addToCartTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"

            />

    </LinearLayout>


</RelativeLayout>
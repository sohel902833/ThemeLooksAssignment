<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".views.seller.SellerUserDetailsActivity">
<include
    layout="@layout/app_bar_layout"
    android:id="@+id/appBarId"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/s_u_profileImageView"
                android:layout_marginTop="50dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:layout_below="@+id/s_u_profileImageView"
                android:textAlignment="center"
                android:id="@+id/s_u_nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Md Sohrab Hossian Sohel"
                android:fontFamily="@font/aclonica"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/orange"
                />
            <TextView
                 android:layout_below="@+id/s_u_nameTv"
                android:textAlignment="center"
                android:id="@+id/s_u_detailsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Md Sohrab Hossian Sohel"
                android:fontFamily="@font/aclonica"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/progressbarId"
                />


        </RelativeLayout>

    </ScrollView>




</LinearLayout>
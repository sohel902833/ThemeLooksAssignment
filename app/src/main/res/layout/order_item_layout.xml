<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/o_productImageView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/sari"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/o_productNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textSize="19sp"
                /> <TextView
                  android:id="@+id/o_productPriceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Price"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp"
                android:textColor="@color/orange"
                /> <TextView
                android:id="@+id/o_productQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp"
                android:textColor="@color/orange"
                /><TextView
                android:id="@+id/o_productStatusTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp"
                android:textColor="@color/orange"
                /><TextView
                android:id="@+id/o_dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textSize="14sp"
                android:textColor="@color/orange"
                />
            <Button
                android:id="@+id/o_actionButton"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg"
                android:text="Complete"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <Button
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/o_userDetailsButton"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg"
                android:text="View User Details"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />



        </LinearLayout>






    </LinearLayout>
</androidx.cardview.widget.CardView>